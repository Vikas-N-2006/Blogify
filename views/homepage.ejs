<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Blogify - Home page</title>
</head>

<body>
    <%- include("./partials/navbar.ejs") %>
        <div class="container mt-5">
            <div class="row row-cols-3">
                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card col" style="width: 18rem;">
                            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read blog</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <%- include("./partials/scripts.ejs") %>
</body>

</html>